{
  "name": "@zino-hofmann/pi-camera-connect",
  "version": "1.0.1",
  "description": "Library to capture and stream Raspberry Pi camera data directly to NodeJS",
  "main": "build/index.js",
  "types": "build/index.d.ts",
  "author": "Zino Hofmann B.V.",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/zino-hofmann/pi-camera-connect"
  },
  "scripts": {
    "commit": "git-cz",
    "lint": "eslint . --ext .js,.ts,.tsx",
    "lint:fix": "npm run lint -- --fix",
    "test": "NODE_ENV=test jest . --maxWorkers=8 --logHeapUsage",
    "test:coverage": "npm run test -- --coverage",
    "test:watch": "NODE_ENV=test jest . --maxWorkers=50% --logHeapUsage --watchAll --coverage",
    "build": "tsc -p .",
    "build:watch": "npm run build -- --watch",
    "clean": "rimraf build tsconfig.tsbuildinfo",
    "clean:install": "rimraf package-lock.json node_modules && npm cache verify && npm install"
  },
  "dependencies": {
    "systeminformation": "^4.27.3"
  },
  "devDependencies": {
    "@types/node": "^14.6.0",
    "@typescript-eslint/eslint-plugin": "^3.10.1",
    "@typescript-eslint/parser": "^3.10.1",
    "commitizen": "^4.2.1",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^7.7.0",
    "eslint-config-airbnb-base": "^14.2.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-prettier": "^3.1.4",
    "jest": "^26.4.2",
    "jest-junit": "^11.1.0",
    "prettier": "^2.1.1",
    "ts-jest": "^26.3.0",
    "typescript": "^4.0.2"
  }
}
